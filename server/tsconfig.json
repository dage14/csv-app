{
  "compilerOptions": {
    "types": ["node","jest"],
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./", 
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"]
    }
  },
  "include": ["src/**/*", "__tests__/**/*"],
  "exclude": ["node_modules", "dist"]
}